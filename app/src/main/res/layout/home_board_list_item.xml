<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homelayou1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_layout2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/home_boardlist_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_baseline_account_circle_signiture"
                ></de.hdodenhof.circleimageview.CircleImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/home_boardlist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:text="sample"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/home_boarlist_content"
            app:layout_constraintStart_toEndOf="@+id/home_layout2"
            app:layout_constraintTop_toTopOf="@+id/home_layout2"
            />
        <TextView
            android:id="@+id/likeCounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좋아요 수"
            android:layout_marginLeft="24dp"
            android:layout_margin="8dp"
            app:layout_constraintStart_toEndOf="@+id/home_layout2"
            app:layout_constraintTop_toBottomOf="@+id/home_boardlist_title"
            />

        <TextView
            android:id="@+id/home_boarlist_content"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/tmoney"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/home_layout2"
            app:layout_constraintTop_toBottomOf="@+id/home_boardlist_title" />

        <TextView
            android:id="@+id/home_boardlist_date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="1dp"
            android:text="pi"
            android:fontFamily="@font/tmoney"
            android:textColor="#797979"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/home_boardlist_title"
            app:layout_constraintTop_toTopOf="@+id/home_layout2" />

        <ImageView
            android:id="@+id/home_boardlist_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/home_boarlist_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>