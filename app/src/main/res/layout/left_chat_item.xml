<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/left_chat_profile"
            android:layout_width="55dp"
            android:layout_height="70dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chat_profile"
                android:layout_width="50dp"
                android:layout_height="53dp"
                android:src="@drawable/ic_baseline_account_circle_signiture"></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/chat_nickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="닉네임" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/left_chat_profile"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/yourchat"
                android:backgroundTintMode="screen"
                android:fontFamily="@font/maru"
                android:gravity="bottom"
                android:maxWidth="200dp"
                android:maxLength="200"
                android:maxLines="7"
                android:padding="10dp"
                android:text=""
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chat_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="날짜"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>
