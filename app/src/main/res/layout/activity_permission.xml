<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12">

        <ImageView
            android:id="@+id/imageView96"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/mylocation" />

        <TextView
            android:id="@+id/textView90"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="현 위치 정보를 실시간으로 제공"
            android:fontFamily="@font/jalnan"
            android:textColor="#797979" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout23"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="168dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="권한 설정 안내"
            android:fontFamily="@font/jalnan"
            android:textColor="#ff9424"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="389dp"
        android:layout_height="29dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="22dp"

        android:ems="10"
        android:inputType="textPersonName"
        android:text="서비스를 원활하게 사용하기 위해 아래 접근 권한이 필요합니다"
        android:textColor="#797979"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout23" />

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="96dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName6">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/cameras" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:padding="1dp"
            android:text="저장공간(사진,미디어,파일) \n\n프로필 및 파일 등록"
            android:fontFamily="@font/jalnan"
            android:textColor="#797979" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout22"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_shape13"

            android:text="계속하기"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="371dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/jalnan"
        android:text="필수 권한 "

        android:textColor="#797979"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout12"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="27dp"
        android:text="기기변경 또는 앱 재설치시 본인인증 및 재가입 절차를 거쳐야 합니다 "
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout22"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>